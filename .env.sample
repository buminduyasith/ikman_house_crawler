# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram chat id (group id). Typically a negative number like -1001234567890
TELEGRAM_CHAT_ID=your_chat_id_here

# Optional: override ikman URL (you can include query params like sort/order)
IKMAN_URL=https://ikman.lk/en/ads/sri-lanka/houses-for-sale?sort=date&order=desc&buy_now=0&urgent=0

# Optional: comma-separated list of locations (ikman URL slugs). When set, the crawler
# will replace the location segment after /ads/ in IKMAN_URL and loop each district.
# Example Colombo-area slugs: colombo,colombo-8,rajagiriya,kotte,dehiwala
DISTRICTS=colombo,colombo-8,rajagiriya,kotte,dehiwala

# Optional: pagination control
START_PAGE=1
PAGES=5

# Optional: limit number of ads sent per run (useful for testing)
SEND_LIMIT=5

# Optional: only send ads with price >= this value (LKR). Example: 25000000
PRICE_MIN=25000000

# Optional: only send ads with price <= this value (LKR). Example: 75000000
PRICE_MAX=75000000

# Optional: filter by details field (e.g. "Bedrooms: 5, Bathrooms: 5")
BEDROOMS_MIN=3
BATHROOMS_MIN=1

# Optional: only keep ads that look like "brand new" in the title
BRAND_NEW_ONLY=false

# Optional: number of images to include per ad (Telegram media groups allow up to 10)
MAX_IMAGES=10

# Optional: logging verbosity (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
