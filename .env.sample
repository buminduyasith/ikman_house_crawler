# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram chat id (group id). Typically a negative number like -1001234567890
TELEGRAM_CHAT_ID=your_chat_id_here

# Optional: override ikman URL (you can include query params like sort/order)
IKMAN_URL=https://ikman.lk/en/ads/sri-lanka/houses-for-sale?sort=date&order=desc&buy_now=0&urgent=0

# Optional: pagination control
START_PAGE=1
PAGES=5

# Optional: limit number of ads sent per run (useful for testing)
SEND_LIMIT=5

# Optional: only send ads with price <= this value (LKR). Example: 75000000
PRICE_MAX=75000000

# Optional: number of images to include per ad (Telegram media groups allow up to 10)
MAX_IMAGES=10

# Optional: logging verbosity (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
